<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:focusableInTouchMode="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="30dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView20"
                    android:src="@drawable/ikon2"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:state_pressed="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@drawable/breakfast_action"
                    android:layout_height="wrap_content"
                    android:id="@+id/breakfastClick"
                    android:onClick="setBreakfast"
                    android:clickable="true"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight=".6"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_weight=".2"
                            android:id="@+id/imageView7"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/coffee" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Breakfast"
                            android:id="@+id/textView"
                            android:layout_gravity="center_vertical"
                            android:textSize="18dp"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="07:00"
                        android:id="@+id/breakfast"
                        android:layout_gravity="center_vertical"
                        android:textSize="40dp" />

                </LinearLayout>
                <LinearLayout
                    android:state_pressed="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@drawable/breakfast_action"
                    android:layout_height="wrap_content"
                    android:id="@+id/lunchClick"
                    android:onClick="setLunch"
                    android:clickable="true"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight=".6"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_weight=".2"
                            android:id="@+id/imageView8"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/therice" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:text="Lunch"
                            android:id="@+id/textView2"
                            android:layout_gravity="center_vertical"
                            android:textSize="18dp"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="13:00"
                        android:id="@+id/lunch"
                        android:layout_gravity="center_vertical"
                        android:textSize="40dp" />

                </LinearLayout>

                <LinearLayout
                    android:state_pressed="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@drawable/breakfast_action"
                    android:layout_height="wrap_content"
                    android:id="@+id/dinnerClick"
                    android:onClick="setDinner"
                    android:clickable="true"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight=".6"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_weight=".2"
                            android:id="@+id/imageView9"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/hamburger" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:text="Dinner"
                            android:id="@+id/textView3"
                            android:layout_gravity="center_vertical"
                            android:textSize="18dp"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="18:00"
                        android:id="@+id/dinner"
                        android:layout_gravity="center_vertical"
                        android:textSize="40dp" />

                </LinearLayout>

                <Button
                    style="@style/AppTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SAVE"
                    android:id="@+id/submitEatTime"
                    android:textColor="@color/background_material_light"
                    android:backgroundTint="#1565C0"
                    android:layout_marginTop="20dp" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>