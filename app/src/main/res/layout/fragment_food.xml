<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ppla01.foodo.AddFoodActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_gravity="center_horizontal"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="40dp">


            <!--<ImageView-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="45dp"-->
            <!--android:layout_weight=".2"-->
            <!--android:id="@+id/imageView7"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:src="@drawable/coffee" />-->


            <LinearLayout
                android:state_pressed="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/breakfastClick"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:elevation="4dp"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".6"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight=".2"
                        android:id="@+id/imageView7"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/coffee" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="Breakfast"
                        android:id="@+id/textView"
                        android:layout_gravity="center_vertical"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:layout_marginTop="3dp" />

                </LinearLayout>


                <!--<Button-->
                <!--android:layout_width="match_parent"-->
                <!--android:background="@drawable/transparant"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Add Food"-->
                <!--android:id="@+id/button"-->
                <!--android:textColor="@color/colorPrimaryDark"-->
                <!--android:layout_below="@+id/theChole"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentStart="true"-->
                <!--/>-->

            </LinearLayout>

            <LinearLayout
                android:state_pressed="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:elevation="2dp"
                android:background="#ffffff">


                <ListView
                    android:id="@+id/listv"
                    android:layout_width="match_parent"
                    android:fastScrollEnabled="false"
                    android:gravity="center_vertical"
                    android:smoothScrollbar="false"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <LinearLayout
                android:state_pressed="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                android:id="@+id/lunchClick"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".6"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight=".2"
                        android:id="@+id/imageView8"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/therice" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="Lunch"
                        android:id="@+id/textView2"
                        android:layout_gravity="center_vertical"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:layout_marginTop="3dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:state_pressed="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                android:id="@+id/item2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:elevation="2dp">

                <ListView
                    android:id="@+id/listvlunch"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fastScrollEnabled="true"></ListView>
            </LinearLayout>

            <LinearLayout
                android:state_pressed="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dinnerClick"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:elevation="4dp"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".6"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight=".2"
                        android:id="@+id/imageView9"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/hamburger" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="Dinner"
                        android:id="@+id/textView3"
                        android:layout_gravity="center_vertical"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:layout_marginTop="3dp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:state_pressed="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                android:id="@+id/item3"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:elevation="2dp">

                <ListView
                    android:id="@+id/listvdinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fastScrollEnabled="true"></ListView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>