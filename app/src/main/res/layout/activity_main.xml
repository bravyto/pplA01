<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:padding="0px"
    android:label="My new title" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="right" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout"
            android:weightSum="1"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView13"
                android:src="@drawable/ikon5_new"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fafafa"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="0dp"
                android:elevation="2dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView15"
                        android:layout_weight="0.2"
                        android:src="@drawable/collaborator"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/name"
                        android:layout_gravity="center_horizontal"
                        android:hint="Name"
                        android:layout_weight="0.8"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView16"
                        android:layout_weight="0.2"
                        android:src="@drawable/birthday"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/birthdate"
                        android:layout_gravity="center_horizontal"
                        android:onClick="showDatePicker"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:enabled="true"
                        android:linksClickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Birthdate"
                        android:layout_weight="0.8"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/textView6"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView17"
                            android:layout_weight="0.2"
                            android:src="@drawable/gender"
                            android:layout_gravity="center_vertical" />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:id="@+id/pria"
                            android:layout_below="@+id/textView6"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:checked="false"
                            android:layout_weight="0.4" />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:id="@+id/wanita"
                            android:layout_below="@+id/textView6"
                            android:layout_centerHorizontal="true"
                            android:checked="false"
                            android:layout_weight="0.4" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView18"
                        android:layout_weight="0.52"
                        android:src="@drawable/scale"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/weight"
                        android:layout_weight="0.53"
                        android:hint="Weight"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="kg"
                        android:id="@+id/textView30"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.05"
                        android:textColor="#000000" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView19"
                        android:layout_weight="0.5"
                        android:src="@drawable/height"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/height"
                        android:layout_weight="0.53"
                        android:hint="Height"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="cm"
                        android:id="@+id/textView31"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.05"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_gravity="right">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView6"
                        android:layout_weight="0.05" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView20"
                        android:layout_weight="0.1"
                        android:src="@drawable/sprinting"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView21"
                        android:layout_weight="0.05" />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spin"
                        android:entries="@array/activity"
                        android:layout_weight="0.6"
                        android:layout_gravity="center_vertical"></Spinner>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView7"
                        android:layout_weight="0.05" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/moreinfo"
                        android:layout_weight="0.1"
                        android:src="@drawable/moreinfo"
                        android:layout_gravity="center_vertical"
                        android:padding="3dp"
                        android:tint="#757575" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView9"
                        android:layout_weight="0.05" />

:
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/submitProfile"
                android:textColor="#ffffff"
                style="@style/AppTheme"
                android:backgroundTint="#1565C0"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
